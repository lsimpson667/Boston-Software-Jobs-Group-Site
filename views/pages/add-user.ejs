<!-- Navbar -->
<%- include('../partials/header')-%>
<!-- Page Content Starts -->

<div class="add-user-form-main-container">
    <div class="container h-100 add-user-border">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-10 col-md-8 col-lg-6">
                <!-- Form -->
                <form class="form" action="/add-user" method="post">
                    <h1>Add New User</h1>
                    <p class="description">Enter your contact information below to add a user.</p>
                    <!-- Input fields -->
                
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" class="form-control" style="width:400px;" id="firstName" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" class="form-control" style="width:400px;" id="lastName" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" name="email" class="form-control" style="width:400px;" id="email" aria-describedby="emailHelp" placeholder="Email">
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                <!-- check the "for",  "name" and "id" names with Loreno's page to make sure they are alll in synch.-->
                <div class="form-group">
                    <label for="year">Cohort Year</label>
                    <input type="text" name="year" class="form-control" style="width:400px;" id="year" placeholder="Cohort Year">
                </div>
                <div class="form-group">
                    <label for="githubUrl">Github</label>
                    <input type="text" name="githubUrl" class="form-control" style="width:400px;" id="githubUrl" placeholder="Github">
                </div>
                <div class="form-group">
                    <label for="level">Level</label>
                    <select name="level" >
                        <option value="admin">Administrator</option>
                        <option value="grad">Graduate</option>
                      </select><br>
                    </div>

                
                <button type="submit" class="btn btn-primary">Submit</button> 
                    <!-- End input fields -->
                    <p class="copyright">&copy; Boston Software Jobs by <a href="https://www.codesquad.org">CodeSquad</a>.</p>
                </form>
                <!-- Form end -->
            </div>
        </div>
    </div>
</div>





